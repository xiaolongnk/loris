<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bac"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1" >

            <loris.gameview
                android:id="@+id/loris"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#00000000" >
            </loris.gameview>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:background="@drawable/back_right"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:background="#00000000"
                android:text="   下一个图形"
                android:textColor="#0000FF" />

            <loris.shownext
                android:id="@+id/smallloris"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:background="#00000000" >
            </loris.shownext>

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:text="   分数：0"
                android:textColor="#0000FF" >
            </TextView>

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:text="      等级: 1"
                android:textColor="#0000FF" >
            </TextView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="80dp" />

            <ImageButton
                android:id="@+id/bt_quit"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:background="#00000000"
                android:src="@drawable/erreur" >
            </ImageButton>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="5"
        android:background="@drawable/back_bottom_new1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="3dp" >

        <ImageButton
            android:id="@+id/bt_left"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/left_select" >
        </ImageButton>

        <ImageButton
            android:id="@+id/bt_down"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/down_select" >
        </ImageButton>

        <ImageButton
            android:id="@+id/bt_right"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/right_select" >
        </ImageButton>

        <ImageButton
            android:id="@+id/bt_change"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/shift_select" >
        </ImageButton>

        <ImageButton
            android:id="@+id/bottom"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/pau" >
        </ImageButton>
    </LinearLayout>

</LinearLayout>